<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The beauties of Prizren"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/wellfleet"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/box1"
                            android:elevation="8dp"
                            android:layout_margin="10dp">

                            <ImageView
                                android:id="@+id/resIcon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/restaurants"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Restaurants"
                            android:textAlignment="center"
                            app:fontFamily="@font/caudex" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/box2"
                            android:elevation="8dp"
                            android:layout_margin="10dp">

                            <ImageView
                                android:id="@+id/cafIcon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/cafes"
                                android:layout_centerInParent="true"/>

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cafes"
                            android:textAlignment="center"
                            android:gravity="center_horizontal"
                            app:fontFamily="@font/caudex"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/banIcon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/box3"
                            android:elevation="8dp"
                            android:layout_margin="10dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/banks"
                                android:layout_centerInParent="true"/>

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Banks"
                            android:textAlignment="center"
                            android:gravity="center_horizontal"
                            app:fontFamily="@font/caudex"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/eduIcon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/box4"
                            android:elevation="8dp"
                            android:layout_margin="10dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/education"
                                android:layout_centerInParent="true"/>

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Education"
                            android:textAlignment="center"
                            android:gravity="center_horizontal"
                            app:fontFamily="@font/caudex"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/box5"
                            android:elevation="8dp"
                            android:layout_margin="10dp">

                            <ImageView
                                android:id="@+id/phaIcon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/pharmacies"
                                android:layout_centerInParent="true"/>

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pharmacies"
                            android:textAlignment="center"
                            android:gravity="center_horizontal"
                            app:fontFamily="@font/caudex"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/box6"
                            android:elevation="8dp"
                            android:layout_margin="10dp">

                            <ImageView
                                android:id="@+id/hotIcon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/hotels"
                                android:layout_centerInParent="true"/>

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hotels"
                            android:textAlignment="center"
                            android:gravity="center_horizontal"
                            app:fontFamily="@font/caudex"/>

                    </LinearLayout>


                </LinearLayout>
            </HorizontalScrollView>
            <LinearLayout
                android:id="@+id/locations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/wellfleet"
                        android:text="Most Viewed Location"
                        android:textAllCaps="true"
                        android:textSize="20dp" />

                </RelativeLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:orientation="vertical"
                            android:layout_width="160dp"
                            android:layout_height="300dp"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="8dp"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:id="@+id/foto1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="140dp"
                                    android:src="@drawable/marashi"
                                    android:scaleType="centerCrop"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Restaurant Marashi"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/wellfleet"/>

                                <RatingBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:rating="3.5"
                                    style="@style/Widget.AppCompat.RatingBar.Small"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="@string/marashi"
                                    app:fontFamily="@font/caudex"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:orientation="vertical"
                            android:layout_width="160dp"
                            android:layout_height="300dp"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="8dp"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:id="@+id/foto2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="140dp"
                                    android:src="@drawable/gatsby"
                                    android:scaleType="centerCrop"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/gatsby"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/wellfleet"/>

                                <RatingBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:rating="5"
                                    style="@style/Widget.AppCompat.RatingBar.Small"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="@string/cafe"
                                    app:fontFamily="@font/caudex"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:orientation="vertical"
                            android:layout_width="160dp"
                            android:layout_height="300dp"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="8dp"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:id="@+id/foto3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="140dp"
                                    android:src="@drawable/theranda"
                                    android:scaleType="centerCrop"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Theranda Hotel"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/wellfleet"/>

                                <RatingBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:rating="4"
                                    style="@style/Widget.AppCompat.RatingBar.Small"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="In the center of Prizren next to the Lumbardhi river"
                                    app:fontFamily="@font/caudex"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:orientation="vertical"
                            android:layout_width="160dp"
                            android:layout_height="300dp"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="8dp"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:id="@+id/foto4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="140dp"
                                    android:src="@drawable/banka"
                                    android:scaleType="centerCrop"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Banka Ekonomike"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/wellfleet"/>

                                <RatingBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:rating="3.5"
                                    style="@style/Widget.AppCompat.RatingBar.Small"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="@string/cafe"
                                    app:fontFamily="@font/caudex"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:orientation="vertical"
                            android:layout_width="160dp"
                            android:layout_height="300dp"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="8dp"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:id="@+id/foto5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="140dp"
                                    android:src="@drawable/gjimnazi"
                                    android:scaleType="centerCrop"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/gjimnazi"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/wellfleet"/>

                                <RatingBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:rating="3.5"
                                    style="@style/Widget.AppCompat.RatingBar.Small"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="@string/gjimnazil"
                                    app:fontFamily="@font/caudex"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:orientation="vertical"
                            android:layout_width="160dp"
                            android:layout_height="300dp"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="8dp"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:id="@+id/foto6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/location_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="140dp"
                                    android:src="@drawable/jara"
                                    android:scaleType="centerCrop"/>

                                <TextView
                                    android:id="@+id/location_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Jara Pharmacy"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/wellfleet"/>

                                <RatingBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:rating="3.5"
                                    style="@style/Widget.AppCompat.RatingBar.Small"/>

                                <TextView
                                    android:id="@+id/location_caption"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="@string/jara"
                                    app:fontFamily="@font/caudex"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/wellfleet"
                        android:text="Prizren, Kosovo"
                        android:textAllCaps="true"
                        android:textSize="20dp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="@string/prizren"
                    android:textStyle="italic"
                    android:fontFamily="@font/caudex">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>